    <script type="text/javascript">
       function pow(x, n) {
    if (n === 0) {
        return 1;
    } else if (n < 0) {
        return 1 / pow(x, -n);
    } else {
        let result = 1;
        for (let i = 0; i < n; i++) {
            result *= x;
        }
        return result;
    }
}


console.log(pow(2, 3)); 
console.log(pow(5, 2)); 
console.log(pow(3, -2)); 


        </script>
