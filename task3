    <script type="text/javascript">
      function sign(x) {
    if (x < 0) {
        return -1;
    } else if (x === 0) {
        return 0;
    } else {
        return 1;
    }
}


console.log(sign(-5)); 
console.log(sign(0));  
console.log(sign(10)); 




        </script>
